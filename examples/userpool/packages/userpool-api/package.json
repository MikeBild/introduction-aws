{
  "private": true,
  "name": "@introduction-aws/userpool-api",
  "version": "1.0.0",
  "description": "UserPool API using AWS Cognito",
  "main": "build/server.js",
  "scripts": {
    "clear": "rimraf -r build .cache",
    "build": "npm run clear && npm run build:server && cp package.json build && npm install --production --prefix build",
    "build:server": "parcel build src/server.ts --target node -d build --no-cache",
    "start": "dotenv node build/server",
    "dev": "npm run clear && npm run build:server && npm run dev:watch",
    "dev:watch": "dotenv concurrently npm:watch:server npm:watch:build",
    "watch:server": "parcel watch src/server.ts --target node -d build",
    "watch:build": "nodemon --watch build build/server",
    "deploy": "dotenv -- cdk deploy --require-approval never --app infrastructure/app.js"
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^3.0.9",
    "aws-sdk": "^2.417.0",
    "aws-serverless-express": "^3.3.5",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-list-endpoints": "^4.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.5.0",
    "jwk-to-pem": "^2.0.1"
  },
  "devDependencies": {
    "@aws-cdk/aws-apigateway": "^0.25.2",
    "@aws-cdk/aws-cognito": "^0.25.2",
    "@aws-cdk/aws-iam": "^0.25.2",
    "@aws-cdk/aws-lambda": "^0.25.2",
    "@aws-cdk/aws-ssm": "^0.25.2",
    "@aws-cdk/cdk": "^0.25.2",
    "@types/aws-serverless-express": "^3.3.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^11.10.5",
    "@types/node-fetch": "^2.1.6",
    "aws-cdk": "^0.25.2",
    "concurrently": "^4.1.0",
    "dotenv-cli": "^1.4.0",
    "nodemon": "^1.18.10",
    "parcel": "^1.12.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.3.3333"
  }
}
