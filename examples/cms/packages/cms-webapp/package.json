{
  "private": true,
  "name": "cms-webapp",
  "version": "1.0.0",
  "description": "CMS WebApp",
  "main": "build/index.js",
  "dependencies": {
    "aws-serverless-express": "^3.3.5",
    "ejs": "^2.6.1",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@aws-cdk/aws-apigateway": "^0.21.0",
    "@aws-cdk/aws-certificatemanager": "^0.21.0",
    "@aws-cdk/aws-lambda": "^0.21.0",
    "@aws-cdk/aws-route53": "^0.21.0",
    "@aws-cdk/cdk": "^0.21.0",
    "@types/aws-serverless-express": "^3.3.0",
    "@types/ejs": "^2.6.1",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "apollo-client": "^2.4.8",
    "aws-appsync": "^1.7.1",
    "concurrently": "^4.1.0",
    "dotenv-cli": "^1.4.0",
    "graphql": "^0.9.0 || ^0.10.0 || ^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0",
    "graphql-tag": "^2.10.0",
    "nodemon": "^1.18.9",
    "parcel": "^1.11.0",
    "react": "^16.7.0",
    "react-apollo": "^2.3.3",
    "react-dom": "^16.7.0",
    "rimraf": "^2.6.3",
    "typescript": "^3.2.2",
    "@introduction-aws/list": "^1.0.0"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "rimraf -r build/server && tsc && cp -r node_modules build/server && cp -r src/server/views build/server",
    "build:client": "rimraf -r build/client && parcel build src/client/index.tsx --public-url ./ -d build/client --no-cache",
    "start": "dotenv -- node build/server",
    "dev": "concurrently npm:watch:server npm:watch:client",
    "watch:client": "parcel watch src/client/index.tsx --public-url ./ -d build/client --no-cache",
    "watch:server": "nodemon --ext ts,ejs --watch src/server --exec \"tsc && cp -r src/server/views build/server && dotenv -- node build/server\"",
    "deploy": "cdk deploy --app infrastructure/app.js"
  }
}