
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2016",
      "es2015"
    ]
  },
  "exclude": ["node_modules", "dist", ".cache"],
  "include": ["src/**/*"]
}