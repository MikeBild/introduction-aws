{
  "private": true,
  "name": "@introduction-aws/todo-app",
  "version": "1.0.0",
  "description": "Todo App",
  "main": "build/server.js",
  "scripts": {
    "clear": "rimraf -r build .cache",
    "build": "npm run clear && npm run build:client && npm run build:server && cp package.json build && npm install --production --prefix build",
    "build:client": "parcel build src/client.tsx -d build/public --no-cache",
    "build:server": "parcel build src/server.tsx --target node -d build --no-cache",
    "start": "dotenv node build/server",
    "dev": "npm run clear && npm run build:client && npm run build:server && npm run dev:watch",
    "dev:watch": "dotenv concurrently npm:watch:client npm:watch:server npm:watch:build",
    "watch:client": "parcel watch src/client.tsx -d build/public",
    "watch:server": "parcel watch src/server.tsx --target node -d build",
    "watch:build": "nodemon --watch build build/server",
    "deploy": "cdk deploy --require-approval never --app infrastructure/app.js"
  },
  "dependencies": {
    "@introduction-aws/todo-webcomponents": "^2.0.0",
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.1",
    "abortcontroller-polyfill": "^1.2.5",
    "aws-serverless-express": "^3.3.5",
    "express": "^4.16.4",
    "isomorphic-fetch": "^2.2.1",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-jss": "^8.6.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "sessionstorage": "^0.1.0",
    "typeface-roboto": "^0.0.54"
  },
  "devDependencies": {
    "@aws-cdk/aws-apigateway": "^0.25.0",
    "@aws-cdk/aws-certificatemanager": "^0.25.0",
    "@aws-cdk/aws-lambda": "^0.25.0",
    "@aws-cdk/cdk": "^0.25.0",
    "@types/aws-serverless-express": "^3.3.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/node": "^11.9.5",
    "@types/react": "^16.8.5",
    "@types/react-dom": "^16.8.2",
    "@types/react-jss": "^8.6.3",
    "@types/react-router-dom": "^4.3.1",
    "aws-cdk": "^0.25.0",
    "concurrently": "^4.1.0",
    "dotenv-cli": "^1.4.0",
    "nodemon": "^1.18.10",
    "parcel": "^1.11.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.3.3333"
  }
}
