{
  "private": true,
  "name": "@introduction-aws/todo-api",
  "version": "1.0.0",
  "description": "Todo API",
  "main": "build/server.js",
  "scripts": {
    "clear": "rimraf -r build .cache",
    "build": "npm run clear && npm run build:server && cp package.json build && npm install --production --prefix build",
    "build:server": "parcel build src/server.ts --target node -d build --no-cache",
    "start": "node build/server",
    "dev": "npm run clear && npm run build:server && npm run dev:watch",
    "dev:watch": "concurrently npm:watch:server npm:watch:build",
    "watch:server": "parcel watch src/server.ts --target node -d build",
    "watch:build": "nodemon --watch build build/server",
    "deploy": "cdk deploy --app infrastructure/app.js"
  },
  "dependencies": {
    "athena-express": "^2.0.6",
    "aws-sdk": "^2.392.0",
    "aws-serverless-express": "^3.3.5",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-list-endpoints": "^4.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@aws-cdk/aws-apigateway": "^0.22.0",
    "@aws-cdk/aws-glue": "^0.22.0",
    "@aws-cdk/aws-iam": "^0.22.0",
    "@aws-cdk/aws-lambda": "^0.22.0",
    "@aws-cdk/aws-s3": "^0.22.0",
    "@aws-cdk/cdk": "^0.22.0",
    "@types/aws-serverless-express": "^3.3.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.9",
    "parcel": "^1.11.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.2.4"
  }
}
